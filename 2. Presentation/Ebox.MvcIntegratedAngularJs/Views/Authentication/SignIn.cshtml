@model Ebox.MvcIntegratedAngularJs.Feature.Authentication.LoginCommand

@{
    ViewBag.Title = "SignIn";
}

@section scripts {
    <script src="~/Scripts/App/SignIn/App.js"></script>
    <script src="~/Scripts/App/SignIn/Controllers/SignInCtrl.js"></script>
}

@section jsCode {
    angular.bootstrap(document.getElementById("signin"), ['SignInModule']);
}

<div ng-non-bindable>
    <div id="signin" data-ng-controller="SignInController as self">
        <div class="row">
            <div class="col-md-4 col-md-offset-4 col-sm-6 col-sm-offset-3 col-xs-9 col-xs-offset-1">
                <div class="page-header">
                    <h1>Please sign in...</h1>
                </div>
                <form name="signInForm" role="form" novalidate="novalidate" ng-submit="self.signIn()">
                    <div class="form-group">
                        <div class="input-group">
                            <span class="input-group-addon">
                                <span class="glyphicon glyphicon-envelope"></span>
                            </span>
                            <input name="email" required required-err-type="emailRequired" type="text" class="form-control" ng-model="self.SignInCommand.email" placeholder="Enter your email" />
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="input-group">
                            <span class="input-group-addon">
                                <span class="glyphicon glyphicon-lock"></span>
                            </span>
                            <input name="password" required required-err-type="passwordRequired" type="password" class="form-control" ng-model="self.SignInCommand.password" placeholder="Enter your password" />
                        </div>

                    </div>
                    <div class="form-group">
                        <label>
                            <input type="checkbox" ng-model="self.SignInCommand.rememberMe"> Remember me
                        </label>
                    </div>

                    <div class="form-group">
                        <button class="btn btn-default" type="submit">
                            <span class="glyphicon glyphicon-log-in"></span>
                            Sign In
                        </button>
                    </div>

                </form>
            </div>


        </div>
    </div>
</div>
