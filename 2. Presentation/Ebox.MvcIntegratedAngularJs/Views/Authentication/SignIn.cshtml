@model Ebox.MvcIntegratedAngularJs.Feature.Authentication.LoginCommand

@{
    ViewBag.Title = "SignIn";
}

@section scripts {
    <script src="~/Scripts/App/SignIn/App.js"></script>
    <script src="~/Scripts/App/SignIn/Controllers/SignInCtrl.js"></script>
}

@section jsCode {
    angular.bootstrap(document.getElementById("signin"), ['SignInModule']);
}

<style type="text/css">
    .valdr-message {
        display: none;
    }

        .valdr-message.ng-invalid.ng-touched.ng-dirty {
            display: inline;
            font-size: small;
            color: red;
        }
</style>

<div ng-non-bindable>
    <div id="signin" data-ng-controller="SignInController as self"  block-ui="main">
        <div class="row">
            <div class="col-md-4 col-md-offset-4 col-sm-6 col-sm-offset-3 col-xs-9 col-xs-offset-1">
                <div class="page-header">
                    <h1>Please sign in...</h1>
                </div>
                <form name="signInForm" valdr-type="SignIn" novalidate role="form" ng-submit="signInForm.$valid && self.signIn()">
                    <div class="form-group" valdr-form-group>
                        <div class="input-group">
                            <span class="input-group-addon">
                                <span class="glyphicon glyphicon-envelope"></span>
                            </span>
                            <input id="email" name="email" type="text" class="form-control" ng-model="self.SignInCommand.email" placeholder="Enter your email" />
                        </div>
                    </div>

                    <div class="form-group" valdr-form-group>
                        <div class="input-group">
                            <span class="input-group-addon">
                                <span class="glyphicon glyphicon-lock"></span>
                            </span>
                            <input id="password" name="password" type="password" class="form-control" ng-model="self.SignInCommand.password" placeholder="Enter your password" />
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="checkbox checkbox-circle checkbox-primary">
                            <input type="checkbox" class="styled" id="remember" name="remember" ng-model="self.SignInCommand.rememberMe">
                            <label for="remember">
                                Remember me
                            </label>
                        </div>
                    </div>

                    <div class="form-group">
                        <button class="btn btn-default" type="submit" ng-disabled="signInForm.$invalid">
                            <span class="glyphicon glyphicon-log-in"></span>
                            Sign In
                        </button>


                    </div>
                    <div class="form-group" ng-show="self.SignInCommand.debug">
                        <textarea class="form-control" rows="10">{{ signInForm.$error | json }}</textarea>
                    </div>
                </form>

            </div>


        </div>
        <div class="checkbox checkbox-circle checkbox-warning">
            <input id="debug" type="checkbox" name="debug" ng-model="self.SignInCommand.debug">
            <label for="debug">
                Debug
            </label>
        </div>
        <button class="btn btn-default" ng-click="toggleBlock('main')">
            <span class="glyphicon glyphicon-pause"></span>
            Show BlockUI
        </button>

    </div>
</div>
