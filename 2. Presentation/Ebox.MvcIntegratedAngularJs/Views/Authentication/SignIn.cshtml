@model Ebox.MvcIntegratedAngularJs.Feature.Authentication.LoginCommand

@{
    ViewBag.Title = "SignIn";
}

@section scripts {
    <script src="~/Scripts/App/SignIn/App.js"></script>
    <script src="~/Scripts/App/SignIn/Controllers/SignInCtrl.js"></script>
}

@section jsCode {
    angular.bootstrap(document.getElementById("signin"), ['SignInModule']);
}

<div ng-non-bindable>
    <div id="signin" data-ng-controller="SignInController as self">
        <div class="row">
            <div class="col-md-4 col-md-offset-4 col-sm-6 col-sm-offset-3 col-xs-9 col-xs-offset-1">
                <div class="page-header">
                    <h1>Please sign in...</h1>
                </div>
                <form role="form">
                    <div class="form-group">
                        <label>Email</label>
                        <input type="text" class="form-control" ng-model="self.SignInCommand.email" />
                    </div>

                    <div class="form-group">
                        <label>Password</label>
                        <input type="password" class="form-control" ng-model="self.SignInCommand.password" />
                    </div>
                    <div class="form-group">
                        <div class="checkbox">
                            <label>
                                <input type="checkbox" ng-model="self.SignInCommand.rememberMe"> Remember me
                            </label>
                        </div>

                    </div>
                    <button class="btn btn-default" ng-click="self.signIn()" type="submit">Sign In</button>
                </form>
            </div>


        </div>
    </div>
</div>
