@{
    ViewBag.Title = "Home Page";
}

@section scripts {    
    <script src="~/Scripts/App/Home/Controllers/homeCtrl.js"></script>
}

<div id="homeController" ng-controller="HomeController as home">
    <div class="jumbotron">
        <h1>Welcome, start your career with us!</h1>
    </div>

    <div class="row">
            <div class="col-md-2">

            </div>
            <div class="col-md-8">
                <form role="form" style="text-align: center">
                    <div class="input-group input-group-lg">
                        <input type="text" class="form-control input-lg" ng-model="home.search.keyword" placeholder="{{home.search.placeHolder}}" />
                        <span class="input-group-btn">
                            <button type="submit" class="btn btn-primary btn-lg" ng-click="home.beginSearch()">Search</button>
                        </span>
                    </div>
                </form>
            </div>
            <div class="col-md-2">
            </div>
        </div>
</div>




