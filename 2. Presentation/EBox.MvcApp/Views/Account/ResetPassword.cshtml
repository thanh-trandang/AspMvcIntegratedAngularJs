

@{
    ViewBag.Title = "Login";
}
<div class="row">
    <div class="col-md-4 col-md-offset-4 left">
        <div class="row">
            <h2 class="col-md-12" style="text-align:left;">Reset password</h2>            
        </div>       

        <div class="row">
            <form name="form" ng-submit="resetPassword()">
                <div>
                    <div class="col-md-10">
                        <input placeholder="Please enter your email address" class="input form-control "
                               type="text"
                               id="email" name="email"
                               ng-model="resetPasswordForm.email" required
                               ng-pattern="/^[A-Za-z0-9._%+-]+@("@")[A-Za-z0-9.-]+\.[A-Za-z]{2,4}$/" />
                    </div>
                    <button ng-disabled="form.$invalid" class="btn btn-default col-md-2" style="text-align:center;" type="submit">Reset</button>
                </div>
                <div>
                    <span ng-show="form.email.$error.email || form.email.$error.pattern" class="help-block error col-md-12">The email address you entered is not valid</span>
                </div>
            </form>
        </div>       
    </div>
</div>
